<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:padding="8dp">

	<Button
			android:id="@+id/splitInstallInvokeDynamicFeatureSampleWithSilentInstall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/splitInstallInvokeDynamicFeatureSampleWithSilentInstall"/>

	<Button android:id="@+id/splitInstallUninstallModule"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/splitInstallUninstallModule" />

	<Button
			android:id="@+id/splitInstallGetInstalledModules"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/splitInstallGetInstalledModules"/>

	<TextView
			android:id="@+id/splitInstalledModules"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

</LinearLayout>
