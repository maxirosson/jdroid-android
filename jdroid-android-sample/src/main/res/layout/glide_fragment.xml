<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<Button android:id="@+id/withActivity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/withActivity" />

	<Button android:id="@+id/withFragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/withFragment" />

	<Button android:id="@+id/withApplicationContext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/withApplicationContext" />

	<Button android:id="@+id/withNullContext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/withNullContext" />

	<Button android:id="@+id/invalidResourceUrl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/invalidResourceUrl" />

	<Button android:id="@+id/outOfMemory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/outOfMemory" />

	<ImageView android:id="@+id/image"
			   android:layout_width="48dp"
			   android:layout_height="48dp" />

</LinearLayout>
