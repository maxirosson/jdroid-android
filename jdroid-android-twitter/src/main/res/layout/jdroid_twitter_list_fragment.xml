											  android:id="@+id/swipeRefreshLayout"
											  android:layout_width="match_parent"
											  android:layout_height="match_parent">

	<ScrollView android:layout_width="match_parent"
				android:layout_height="match_parent">

		<LinearLayout android:id="@+id/tweetContainer"
