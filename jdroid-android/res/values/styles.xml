<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Texts -->

	<style name="whiteShadowText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
	</style>

	<style name="blackShadowText">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">@android:color/white</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
	</style>

	<style name="baseText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
	</style>

	<style name="title1Text" parent="baseText">
		<item name="android:textSize">@dimen/title1Text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="title2Text" parent="baseText">
		<item name="android:textSize">@dimen/title2Text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="h1Text" parent="baseText">
		<item name="android:textSize">@dimen/h1Text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="h2Text" parent="baseText">
		<item name="android:textSize">@dimen/h2Text</item>
	</style>

	<style name="normalText" parent="baseText">
		<item name="android:textSize">@dimen/normalText</item>
	</style>

	<style name="smallText" parent="baseText">
		<item name="android:textSize">@dimen/smallText</item>
	</style>

	<style name="noResultsText" parent="normalText">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>

	<style name="sectionTitle" parent="h1Text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/section_title_background</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
	</style>

	<!-- Buttons -->

	<style name="button" parent="h1Text">
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
	</style>

	<style name="largeButton">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_margin">10dp</item>
	</style>

	<style name="optionButton" parent="title2Text">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
	</style>


	<!-- Lists & Grids -->

	<style name="list" parent="android:Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<!-- <item name="android:divider">@android:color/black</item> -->
		<item name="android:listSelector">@android:color/transparent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="contextualList">
		<item name="android:scrollbars">none</item>
		<item name="android:divider">@drawable/leftnav_bar_tab_separator_dark</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:listSelector">@android:color/transparent</item>
	</style>

	<style name="contextualItemText" parent="title2Text">
		<item name="android:textColor">@color/contextual_item_text_color</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="grid">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:listSelector">@android:color/transparent</item>
	</style>

	<!-- Dialogs -->

	<style name="customDialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Progress Indicators -->

	<style name="smallBlackProgressIndicator" parent="@android:style/Widget.ProgressBar.Inverse">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="smallWhiteProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="largeWhiteProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Borders -->

	<style name="blackBorder1dp">
		<item name="android:background">@drawable/border</item>
		<item name="android:padding">1dp</item>
	</style>

	<!-- Wizard -->

	<style name="finishWizardText" parent="android:TextAppearance.Holo.Medium">
		<item name="android:textColor">#fff</item>
	</style>

	<!-- Facebook -->

	<style name="facebookLoginButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/com_facebook_button_blue</item>
		<item name="android:drawableLeft">@drawable/com_facebook_inverse_icon</item>
		<item name="android:drawablePadding">@dimen/com_facebook_loginview_compound_drawable_padding</item>
		<item name="android:paddingBottom">@dimen/com_facebook_loginview_padding_bottom</item>
		<item name="android:paddingLeft">@dimen/com_facebook_loginview_padding_left</item>
		<item name="android:paddingRight">@dimen/com_facebook_loginview_padding_right</item>
		<item name="android:paddingTop">@dimen/com_facebook_loginview_padding_top</item>
		<item name="android:textColor">@color/com_facebook_loginview_text_color</item>
		<item name="android:textSize">@dimen/com_facebook_loginview_text_size</item>
	</style>

</resources>