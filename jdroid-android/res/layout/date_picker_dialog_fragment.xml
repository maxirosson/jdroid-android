<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical">

	<DatePicker android:id="@+id/datePicker" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" />

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_margin="10dp">
		<Button android:id="@+id/cancel" android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_weight="0.5" android:text="@string/cancel" />

		<Button android:id="@+id/ok" android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_weight="0.5" android:text="@string/ok" />
	</LinearLayout>
</LinearLayout>