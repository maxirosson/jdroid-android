<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Texts -->

	<style name="jdroid_baseText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
		<item name="android:textColor">@color/jdroid_textColor</item>
	</style>

	<style name="jdroid_textMicro" parent="@style/jdroid_baseText">
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textSize">@dimen/jdroid_textMicro</item>
	</style>

	<style name="jdroid_textSmall" parent="@style/jdroid_baseText">
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textSize">@dimen/jdroid_textSmall</item>
	</style>

	<style name="jdroid_textMedium" parent="@style/jdroid_baseText">
		<item name="android:textAppearance">?android:textAppearanceMedium</item>
		<item name="android:textSize">@dimen/jdroid_textMedium</item>
	</style>

	<style name="jdroid_textLarge" parent="@style/jdroid_baseText">
		<item name="android:textAppearance">?android:textAppearanceLarge</item>
		<item name="android:textSize">@dimen/jdroid_textLarge</item>
	</style>

	<style name="jdroid_textMediumBold" parent="@style/jdroid_textMedium">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="jdroid_textLargeBold" parent="@style/jdroid_textLarge">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="jdroid_noResultsText" parent="@style/jdroid_textMedium">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="jdroid_sectionTitle" parent="@style/jdroid_textMediumBold">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">4dp</item>
	</style>

	<!-- Buttons -->

	<style name="jdroid_raisedButton">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/jdroid_textview_button_selector</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:minHeight">40dp</item>
	</style>

	<!-- Dialogs -->

	<style name="jdroid_customDialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Progress Indicators -->

	<style name="jdroid_largeWhiteProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Divider -->

	<style name="jdroid_divider">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@color/jdroid_grey</item>
	</style>

	<!-- Social -->

	<style name="jdroid_socialButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:typeface">normal</item>
		<item name="android:textSize">@dimen/jdroid_socialButtonText</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- Nav Drawer -->

	<style name="jdroid_leftNavDrawer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">start</item>
	</style>

	<style name="jdroid_rightNavDrawer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">end</item>
	</style>

	<!-- Update Google Play Services -->

	<style name="jdroid_updateGooglePlayServicesLegend">
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<!-- CardView -->

	<style name="jdroid_cardViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="cardBackgroundColor">@android:color/white</item>
		<item name="android:layout_marginTop">@dimen/jdroid_cardViewHalfMargin</item>
		<item name="android:layout_marginBottom">@dimen/jdroid_cardViewHalfMargin</item>
		<item name="android:layout_marginLeft">@dimen/jdroid_cardViewMargin</item>
		<item name="android:layout_marginRight">@dimen/jdroid_cardViewMargin</item>
	</style>

	<style name="jdroid_cardViewFullMarginStyle" parent="@style/jdroid_cardViewStyle">
		<item name="android:layout_marginTop">@dimen/jdroid_cardViewMargin</item>
		<item name="android:layout_marginBottom">@dimen/jdroid_cardViewMargin</item>
	</style>

	<style name="jdroid_cardViewHalfMarginStyle" parent="@style/jdroid_cardViewStyle">
		<item name="android:layout_marginLeft">@dimen/jdroid_cardViewHalfMargin</item>
		<item name="android:layout_marginRight">@dimen/jdroid_cardViewHalfMargin</item>
	</style>

	<style name="jdroid_cardViewClickableStyle" parent="@style/jdroid_cardViewStyle">
		<item name="android:foreground">?android:attr/selectableItemBackground</item>
	</style>

	<style name="jdroid_cardViewClickableFullMarginStyle" parent="@style/jdroid_cardViewClickableStyle">
		<item name="android:layout_marginTop">@dimen/jdroid_cardViewMargin</item>
		<item name="android:layout_marginBottom">@dimen/jdroid_cardViewMargin</item>
	</style>

	<style name="jdroid_cardViewClickableHalfMarginStyle" parent="@style/jdroid_cardViewClickableStyle">
		<item name="android:layout_marginLeft">@dimen/jdroid_cardViewHalfMargin</item>
		<item name="android:layout_marginRight">@dimen/jdroid_cardViewHalfMargin</item>
	</style>

	<style name="jdroid_cardViewInner">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="jdroid_cardViewTitle" parent="@style/jdroid_textMedium">
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">8dp</item>
	</style>

	<!-- Ads -->

	<style name="jdroid_adsViewContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:gravity">bottom|center_horizontal</item>
		<item name="android:visibility">gone</item>
	</style>

	<!-- Floating Action Button -->

	<style name="jdroid_floatingActionButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/jdroid_fabSpacing</item>
		<item name="android:elevation" tools:ignore="NewApi">@dimen/jdroid_fabElevation</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentRight">true</item>
	</style>

</resources>