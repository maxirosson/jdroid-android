<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Themes -->

	<style name="Jdroid.Theme.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<!-- your app branding color for the app bar -->
		<item name="colorPrimary">@color/jdroid_colorPrimary</item>
		<!-- darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">@color/jdroid_colorPrimaryDark</item>
		<!-- theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/jdroid_accentColor</item>

		<item name="alertDialogTheme">@style/Jdroid.Dialog.Alert</item>
		<item name="dialogTheme">@style/Jdroid.Dialog</item>
	</style>

	<style name="Jdroid.Theme.Light.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<!-- your app branding color for the app bar -->
		<item name="colorPrimary">@color/jdroid_colorPrimary</item>
		<!-- darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">@color/jdroid_colorPrimaryDark</item>
		<!-- theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/jdroid_accentColor</item>

		<item name="alertDialogTheme">@style/Jdroid.Dialog.Alert</item>
		<item name="dialogTheme">@style/Jdroid.Dialog</item>
	</style>

	<!-- Styles -->

	<style name="Jdroid.Dialog.Alert" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/jdroid_colorPrimary</item>
		<item name="colorAccent">@color/jdroid_accentColor</item>
		<item name="android:windowBackground">@drawable/jdroid_dialog_background_light</item>
	</style>

	<style name="Jdroid.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
		<item name="colorPrimary">@color/jdroid_colorPrimary</item>
		<item name="colorAccent">@color/jdroid_accentColor</item>
		<item name="android:windowBackground">@drawable/jdroid_dialog_background_light</item>
	</style>

</resources>