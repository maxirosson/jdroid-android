<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
								   xmlns:tools="http://schemas.android.com/tools"
								   android:id="@+id/shareSection"
								   style="@style/jdroid_cardViewFullMarginStyle"
								   android:visibility="gone"
								   tools:visibility="visible">

	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical">

		<RelativeLayout android:id="@+id/shareMore"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="12dp"
						android:background="?android:attr/selectableItemBackground">

			<TextView android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:text="@string/jdroid_share"
					  style="@style/jdroid_cardViewTitle"
					  android:layout_centerVertical="true" />

			<TextView android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:text="@string/jdroid_more"
					  android:textAllCaps="true"
					  style="@style/jdroid_cardViewTitle"
					  android:layout_alignParentRight="true"
					  android:layout_centerVertical="true" />

		</RelativeLayout>

		<LinearLayout android:id="@+id/shareItemsContainer"
					  android:layout_height="wrap_content"
					  android:layout_width="match_parent"
					  android:orientation="horizontal"
					  android:layout_margin="4dp" />

	</LinearLayout>

</androidx.cardview.widget.CardView>
