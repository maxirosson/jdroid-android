<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
    <id>jdroid</id>	
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
	    <fileSet>
            <directory>target/site</directory>
            <outputDirectory/>
        </fileSet>
        <fileSet>
            <directory>jdroid-java/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory/>
        </fileSet>
		<fileSet>
            <directory>jdroid-javaweb/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory/>
        </fileSet>
		<fileSet>
            <directory>jdroid-android/target</directory>
            <includes>
                <include>*.apklib</include>
            </includes>
            <outputDirectory/>
        </fileSet>
		<fileSet>
            <directory>jdroid-android/target</directory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
            <outputDirectory/>
        </fileSet>
		<fileSet>
            <directory>jdroid-android-leftnavbar/target</directory>
            <includes>
                <include>*.apklib</include>
            </includes>
            <outputDirectory/>
        </fileSet>
		<fileSet>
            <directory>jdroid-android-leftnavbar/target</directory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
            <outputDirectory/>
        </fileSet>
    </fileSets>
</assembly>
