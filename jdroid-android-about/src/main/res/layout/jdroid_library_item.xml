<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView style="@style/jdroid_cardViewClickableStyle"
								   xmlns:android="http://schemas.android.com/apk/res/android"
								   xmlns:tools="http://schemas.android.com/tools">

	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical"
				  style="@style/jdroid_cardViewInner">

		<TextView android:id="@+id/name"
				  style="@style/jdroid_cardViewTitle"
				  android:layout_marginBottom="4dp"
				  tools:text="Library Name" />

		<TextView android:id="@+id/author"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  tools:text="Author Full Name" />
	</LinearLayout>

</androidx.cardview.widget.CardView>
